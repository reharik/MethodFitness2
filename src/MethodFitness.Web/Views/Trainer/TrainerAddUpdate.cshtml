@using CC.Core.Html.CCUI
@using MethodFitness.Web
@using MethodFitness.Web.Controllers
@model TrainerViewModel

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

  
@section ExtraContentHeaderButtons{
    <button class="delete" title="@WebLocalizationKeys.REMOVE"></button>
    <button id="trainerPayments" class="trainer_payment_history" title="@WebLocalizationKeys.TRAINER_PAYMENTS"></button>
    <button id="payTrainer" class="pay_trainer" title="@WebLocalizationKeys.PAY_TRAINER"></button>
}

        <div class="col left">
            <div class="fieldRow">
                <h4>@WebLocalizationKeys.PERSONAL_INFORMATION</h4>
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.FirstName).AddClassToRoot("half first").ToHtmlTag()
                @Html.SubmissionFor(x => x.LastName).AddClassToRoot("half last").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.ViewFor(x => x.UserLoginInfoLoginName).LabelDisplay(WebLocalizationKeys.LOGIN_NAME).AddClassToRoot("half first").ToHtmlTag()
                @Html.SubmissionFor(x => x.BirthDate).AddClassToRoot("half").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.Address1).AddClassToRoot("half first").ToHtmlTag()
                @Html.SubmissionFor(x => x.Address2).AddClassToRoot("half").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.City).AddClassToRoot("half first").ToHtmlTag()
                @Html.SubmissionFor(x => x.State).AddClassToRoot("one-quarter").ToHtmlTag()
                @Html.SubmissionFor(x => x.ZipCode).AddClassToRoot("one-quarter").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @WebLocalizationKeys.SELECT_COLOR_TO_ASSOCIATE_WITH_THIS_PERSON.ToString()
            </div>
            <div class="fieldRow">
                @MvcHtmlString.Create(Html.SubmissionFor(x => x.Color).HideLabel().AddClassToRoot("first half").InputId("color").ToString())
                <div id="colorPicker"></div>
            </div>
                <div class="fieldRow artifact-field">
                @Html.SubmissionFor(x => x.UserRolesDtos).ElType("MultiSelect").LabelDisplay(WebLocalizationKeys.USER_ROLES).ToHtmlTag()
            </div>
        </div>
        <div class="col right">
            <div class="fieldRow">
                <h4>@WebLocalizationKeys.PASSWORD</h4>
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.UserLoginInfoLoginName).LabelDisplay(WebLocalizationKeys.LOGIN_NAME).ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.Password).InputId("Password").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.PasswordConfirmation).ToHtmlTag()
            </div>
             <div class="fieldRow">
                @Html.SubmissionFor(x => x.Email).ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.PhoneMobile).AddClassToRoot("first half").ToHtmlTag()
                @Html.SubmissionFor(x => x.SecondaryPhone).AddClassToRoot("half").ToHtmlTag()
            </div>
             <div class="fieldRow">
                @Html.SubmissionFor(x => x.ClientRateDefault).ToHtmlTag()
            </div>
            <div class="fieldRow artifact-field">
                @Html.SubmissionFor(x => x.ClientsDtos).ElType("MultiSelect").LabelDisplay(WebLocalizationKeys.CLIENTS).ToHtmlTag()
            </div>

        </div>
     
        <script id="percentageTemplate" type="text/x-jQuery-tmpl">
            <input type="hidden" id="editingId" value="${id}" />
            <div class="col left">
                <div class="fieldRow">
                    <h3>@WebLocalizationKeys.TRAINER_PERCENTAGE_FOR_CLIENT</h3>
                    <div class="editor_root half first">
                        <div class="editor_label">
                            <label for="newTrainerPercentage">Trainer Percentage</label>
                        </div>
                        <div class="editor_input">
                            <input id="newTrainerPercentage" type="text" value='${percentage}'/>
                        </div>
                    </div>
                </div>
            </div>
        </script>