@using HtmlTags
@using MethodFitness.Core.Html.FubuUI
@using MethodFitness.Core.Services
@using MethodFitness.Web
@using MethodFitness.Web.Controllers
@model ClientViewModel

@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

@section ExtraContentHeaderButtons{
    @if (UserPermissionService.Allow("/Clients/CanDeleteClients"))
    {
        <button class="delete" title="@WebLocalizationKeys.REMOVE"></button>
    }
    <button class="client_payment" title="@WebLocalizationKeys.MAKE_PAYMENT"></button>
}
        <div class="col left">
            <div class="fieldRow">
                <h4>@WebLocalizationKeys.CLIENT_INFORMATION</h4>
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.FirstName).AddClassToRoot("half first").ToHtmlTag()
                @Html.SubmissionFor(x => x.LastName).AddClassToRoot("half last").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.BirthDate).AddClassToRoot("half first").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.Address1).AddClassToRoot("half first").ToHtmlTag()
                @Html.SubmissionFor(x => x.Address2).AddClassToRoot("half").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.City).AddClassToRoot("half first").ToHtmlTag()
                @Html.SubmissionFor(x => x.State).AddClassToRoot("one-quarter").ToHtmlTag()
                @Html.SubmissionFor(x => x.ZipCode).AddClassToRoot("one-quarter").ToHtmlTag()
            </div>
            
        </div>
        <div class="col right">
             <div class="fieldRow">
                @Html.SubmissionFor(x => x.Email).ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.MobilePhone).AddClassToRoot("first half").ToHtmlTag()
                @Html.SubmissionFor(x => x.SecondaryPhone).AddClassToRoot("half").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.Source).AddClassToRoot("half first").InputId("source").ToHtmlTag()
                @Html.SubmissionFor(x => x.StartDate).AddClassToRoot("half").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.SourceOther).RootId("other").AddClassToRoot("first").LabelDisplay(WebLocalizationKeys.SOURCE_NOTES).ToHtmlTag()
            </div>
        </div>
        <div class="col full clear">
            <div class="fieldRow">
                @Html.SubmissionFor(x => x.Notes).ToHtmlTag()
            </div>
        </div>
        @if (UserPermissionService.Allow("/Billing/ChangeClientRates"))
        {
            <div class="col full clear"></div>
            <div class="col left">
                <div class="fieldRow">
                    <h4>@WebLocalizationKeys.CLIENT_RATES</h4>
                </div>
                <div class="fieldRow">
                    @Html.SubmissionFor(x => x.SessionRatesFullHour).AddClassToRoot("half first").ToHtmlTag()
                </div>
                <div class="fieldRow">
                    @Html.SubmissionFor(x => x.SessionRatesHalfHour).AddClassToRoot("half first").ToHtmlTag()
                </div>
                <div class="fieldRow">
                    @Html.SubmissionFor(x => x.SessionRatesFullHourTenPack).AddClassToRoot("half first").ToHtmlTag()
                </div>
                <div class="fieldRow">
                    @Html.SubmissionFor(x => x.SessionRatesHalfHourTenPack).AddClassToRoot("half first").ToHtmlTag()
                </div>
                <div class="fieldRow">
                    @Html.SubmissionFor(x => x.SessionRatesPair).AddClassToRoot("half first").ToHtmlTag()
                </div>
                <div class="fieldRow">
                    @Html.SubmissionFor(x => x.SessionRatesPairTenPack).AddClassToRoot("half first").ToHtmlTag()
                </div>
            </div>
        }
        <div class="col right">
            <div class="fieldRow">
                <h4>@WebLocalizationKeys.CURRENT_CLIENT_INVENTORY</h4>
            </div>
            <div class="fieldRow">
                @Html.ViewFor(x => x._sessionsAvailable.FullHour).AddClassToRoot("two-thirds").AddClassToInput("payment_input").InputId("fullHour").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.ViewFor(x => x._sessionsAvailable.HalfHour).AddClassToRoot("two-thirds").AddClassToInput("payment_input").InputId("halfHour").ToHtmlTag()
            </div>
            <div class="fieldRow">
                @Html.ViewFor(x => x._sessionsAvailable.Pair).AddClassToRoot("two-thirds").AddClassToInput("payment_input").InputId("pair").ToHtmlTag()
            </div>
        </div>
