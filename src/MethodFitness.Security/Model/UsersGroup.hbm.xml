<?xml version="1.0"?>
<hibernate-mapping  auto-import="true"
										default-lazy="true"
										xmlns:xsd="http://www.w3.org/2001/XMLSchema"
										xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
										namespace="MethodFitness.Security.Model"
										assembly="MethodFitness.Security"
										xmlns="urn:nhibernate-mapping-2.2">
	<class name="UsersGroup"
				 table="UsersGroups">
		<cache usage="read-write"
					 region="systemsupport-security"/>
		<id name="EntityId"
				access="property"
				column="EntityId"
      type="System.Int32">
      <generator class="identity">
      </generator>
    </id>
    <property name="Name"
							access="property"
							type="String">
      <column name="Name"
							length="255"
							not-null="true"
							unique="true"/>
    </property>
		<many-to-one name="Parent"
								 access="property"
								 class="UsersGroup"
								 column="Parent" />
		<set name="DirectChildren"
				 access="property"
				 table="UsersGroups"
				 lazy="true"
				 inverse="true">
			<cache usage="read-write"
						 region="systemsupport-security"/>
			<key column="Parent" />
			<one-to-many class="UsersGroup" />
		</set>
		<set name="Users"
				 access="property"
				 table="UsersToUsersGroups"
				 lazy="true">
			<cache usage="read-write"
						 region="systemsupport-security"/>
			<key column="GroupId" />
			<many-to-many class="MethodFitness.Security.IUser"
										column="UserId"/>
		</set>
		<set name="AllChildren"
				 access="property"
				 table="UsersGroupsHierarchy"
				 lazy="true"
				 inverse="true">
			<cache usage="read-write"
						 region="systemsupport-security"/>
			<key column="ParentGroup" />
			<many-to-many class="UsersGroup"
										column="ChildGroup"/>
		</set>
		<set name="AllParents"
				 access="property"
				 table="UsersGroupsHierarchy"
				 lazy="true">
			<cache usage="read-write"
						 region="systemsupport-security"/>
			<key column="ChildGroup" />
			<many-to-many class="UsersGroup"
										column="ParentGroup"/>
		</set>
    <property name="Description"
							access="property"
							type="String">
      <column name="Description"
							length="1000"/>
    </property>
	</class>
</hibernate-mapping>
