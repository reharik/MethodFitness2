@using CC.Core.Core.Html.CCUI
@using MF.Core.Services
@using MF.Web
@model MF.Web.Controllers.ClientViewModel

@{
    this.Layout = "~/Views/Shared/_FormLayout.cshtml";
}

@section ExtraContentHeaderButtons{
    @if (UserPermissionService.Allow("/Clients/CanDeleteClients"))
    {
        <button class="delete" title="@WebLocalizationKeys.REMOVE"></button>
    }
    <button class="client_payment" title="@WebLocalizationKeys.MAKE_PAYMENT"></button>
}


<div class="row">
    <h5 class="stdTxtColor ml2 span8">@WebLocalizationKeys.CLIENT_INFORMATION</h5>
</div>
<div class="row">
@*-----------Left Column-------------*@
    <div class="span10">
        <div class="row">
            @this.Html.SubmissionFor(x => x.FirstName).Size("5").ToHtmlTag()
            @this.Html.SubmissionFor(x => x.LastName).Size("5").ToHtmlTag()
        </div>
        <div class="row">
            @this.Html.SubmissionFor(x => x.BirthDate).Size("5").ToHtmlTag()
        </div>
        <div class="row">
            @this.Html.SubmissionFor(x => x.Address1).Size("5").ToHtmlTag()
            @this.Html.SubmissionFor(x => x.Address2).Size("5").ToHtmlTag()
        </div>
        <div class="row">
            @this.Html.SubmissionFor(x => x.City).Size("5").ToHtmlTag()
            @this.Html.SubmissionFor(x => x.State).Size("2").ToHtmlTag()
            @this.Html.SubmissionFor(x => x.ZipCode).Size("3").ToHtmlTag()
        </div>
    </div>

    <div class="span1"></div>
@*-----------Right Column-------------*@
    <div class="span10">
        <div class="row">
            @this.Html.SubmissionFor(x => x.Email).Size("8").ToHtmlTag()
        </div>
        <div class="row">
            @this.Html.SubmissionFor(x => x.MobilePhone).Size("5").ToHtmlTag()
            @this.Html.SubmissionFor(x => x.SecondaryPhone).Size("5").ToHtmlTag()
        </div>
        <div class="row">
            @this.Html.SubmissionFor(x => x.Source).Size("5").InputId("source").ToHtmlTag()
            @this.Html.SubmissionFor(x => x.StartDate).Size("5").ToHtmlTag()
        </div>
        <div class="row">
                @this.Html.SubmissionFor(x => x.SourceOther).Size("10").RootId("other").LabelDisplay(WebLocalizationKeys.SOURCE_NOTES).ToHtmlTag()
        </div>
    </div>

</div>

<div class="row blank"></div>

<div class="row">
    <div class="span10">
        @if (UserPermissionService.Allow("/Billing/ChangeClientRates"))
        {
            <div class="row">
                    <h5 class="stdTxtColor ml2 span10">@WebLocalizationKeys.CLIENT_RATES</h5>
            </div>
            <div class="row">
                    @this.Html.SubmissionFor(x => x.SessionRatesFullHour).LabelDisplay(WebLocalizationKeys.FULL_HOUR).Size("5").ToHtmlTag()
            </div>
            <div class="row">
                    @this.Html.SubmissionFor(x => x.SessionRatesFullHourTenPack).LabelDisplay(WebLocalizationKeys.FULL_HOUR_TEN_PACK).Size("5").ToHtmlTag()
            </div>
            <div class="row">
                    @this.Html.SubmissionFor(x => x.SessionRatesHalfHour).LabelDisplay(WebLocalizationKeys.HALF_HOUR).Size("5").ToHtmlTag()
            </div>
            <div class="row">
                    @this.Html.SubmissionFor(x => x.SessionRatesHalfHourTenPack).LabelDisplay(WebLocalizationKeys.HALF_HOUR_TEN_PACK).Size("5").ToHtmlTag()
            </div>
            <div class="row">
                    @this.Html.SubmissionFor(x => x.SessionRatesPair).LabelDisplay(WebLocalizationKeys.PAIR).Size("5").ToHtmlTag()
            </div>
            <div class="row">
                    @this.Html.SubmissionFor(x => x.SessionRatesPairTenPack).LabelDisplay(WebLocalizationKeys.PAIR_TEN_PACK).Size("5").ToHtmlTag()
            </div>
        }
    </div>
    <div class="span1"/>

    <div class="span10">
        <div class="row">
            <h5 class="stdTxtColor ml2 span5">@WebLocalizationKeys.CURRENT_CLIENT_INVENTORY</h5>
        </div>
        <div class="row blank"></div>
        <div class="row">
                @this.Html.ViewFor(x => x._sessionsAvailable.FullHour).Size("5").AddClassToInput("payment_input").InputId("fullHour").ToHtmlTag()
        </div>
        <div class="row">
                @this.Html.ViewFor(x => x._sessionsAvailable.HalfHour).Size("5").AddClassToInput("payment_input").InputId("halfHour").ToHtmlTag()
        </div>
        <div class="row">
                @this.Html.ViewFor(x => x._sessionsAvailable.Pair).Size("5").AddClassToInput("payment_input").InputId("pair").ToHtmlTag()
        </div>
    </div>
</div>
    